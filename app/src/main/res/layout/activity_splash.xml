<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient"
    tools:context=".SplashActivity">

    <View
        android:id="@+id/bar_1"
        android:layout_width="20dp"
        android:layout_height="200dp"
        android:background="@color/md_green_800"
        android:visibility="visible"/>

    <View
        android:id="@+id/bar_2"
        android:layout_width="20dp"
        android:layout_height="150dp"
        android:layout_toRightOf="@+id/bar_1"
        android:background="@color/md_green_700"
        android:visibility="visible"/>

    <View
        android:id="@+id/bar_3"
        android:layout_width="20dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/bar_2"
        android:background="@color/md_green_600"
        android:visibility="visible"/>

        <ImageView
            android:id="@+id/img_tick"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/icon1"
            android:alpha="0.1"
            android:layout_marginTop="180dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/splash_gradient"
            android:visibility="visible"/>

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_tick"
        android:layout_centerInParent="true"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/acme"
        android:text="@string/app_name"
        android:textColor="@color/md_white_1000"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/app_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:fontFamily="casual"
        android:text="Know what is correct."
        android:textColor="@color/md_white_1000"
        android:textSize="20dp" />

</RelativeLayout>